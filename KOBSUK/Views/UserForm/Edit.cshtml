@model KOBSUK.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="title">
    <h2 class="d-flex justify-content-center">
        แก้ไขข้อมูลลูกค้า
    </h2>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.c_id)

    <div class="form-group">
        <label class="control-label col-md-2">รหัสลูกค้า</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.c_id, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.c_id, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">ชื่อลูกค้า</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.c_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.c_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">เบอร์</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.c_tell, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.c_tell, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="บันทึก" class="btn btn-primary" />

            @Html.ActionLink("ยกเลิก", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}
